<div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4">
  <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"></path>
  </svg>
</div>
<%= form_with scope: :user, method: :post, controller_name: 'account', action_name: 'login', class: 'text-center', disabled: form_disabled? do |form| %>
  <div class="mb-3">
    <%= form.text_field :username, required: true, class: "form-control #{input_disabled_class}", disabled: form_disabled?, placeholder: 'Username' %>
  </div>
  <div class="mb-3">
    <%= form.password_field :password, required: true, class: "form-control #{input_disabled_class}", disabled: form_disabled?, placeholder: 'Password' %>
  </div>
  <div class="mb-3">
    <%= form.submit 'Login', class: "btn btn-primary d-block w-100 #{input_disabled_class}", disabled: form_disabled? %>
  </div>
<% end %>
<p class="text-muted">
  <%= link_to 'Register', register_path, class: 'link-secondary' %> | <%= link_to 'Go back', @redirect_path, class: 'link-secondary' %>
</p>

